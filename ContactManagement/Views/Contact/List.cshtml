
@{
	ViewData["Title"] = "List";
}

@section css{

	<link rel="stylesheet" href="~/theme/plugins/datatables-bs4/css/dataTables.bootstrap4.min.css">
	<link rel="stylesheet" href="~/theme/plugins/datatables-responsive/css/responsive.bootstrap4.min.css">

	<style type="text/css">
		.Active {
			color: darkgreen;
			font-weight: bold;
		}

		.Inactive {
			color: darkred;
			font-weight: bold;
		}
	</style>

}

<div class="content-wrapper">
	<!-- Content Header (Page header) -->
	<section class="content-header">
		<div class="container-fluid">
			<div class="row mb-2">
				<div class="col-sm-6">
					<h1>Contacts list</h1>
				</div>

			</div>
		</div><!-- /.container-fluid -->
	</section>


	<section class="content">

		<form asp-controller="Contact" asp-action="List" method="post" data-ajax="true"
			  data-ajax-method="post" data-ajax-update="searchResults"
			  data-ajax-success="SearchSuccess" data-ajax-begin="SearchBegin" id="form_contact">
			<div class="card">
				<div class="card-header">
					<h3 class="card-title">Filter</h3>

					<div class="card-tools">
						<a asp-action="Manage" asp-controller="Contact" class="form-control">Create New</a>
						<button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
							<i class="fas fa-minus"></i>
						</button>

					</div>
				</div>
				<div class="card-body">
					<div class="row">
						<div class="col-md-4">
							<div class="form-group">
								<label>Status</label>
								<select class="form-control" style="width: 100%;" name="Status" id="SelStatus">
									<option value="">All</option>
									<option value="true">Active</option>
									<option value="false">Inactive</option>
								</select>
							</div>
						</div>

					</div>

				</div>

			</div>
		</form>



		<div id="searchResults">
		</div>


	</section>

</div>
@section scripts{
	<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-ajax-unobtrusive/3.2.6/jquery.unobtrusive-ajax.min.js"></script>
	<script src="~/theme/plugins/datatables/jquery.dataTables.min.js"></script>
	<script src="~/theme/plugins/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>
	<script src="~/theme/plugins/datatables-responsive/js/dataTables.responsive.min.js"></script>

	<script type="text/javascript">
		$("#form_contact").submit();
		function SearchBegin() {

			$("#ajaxLoading").show();

		}

		$(document).ready(function () {
			$('#SelStatus').change(function () {
				$('#form_contact').submit();
			});
		});


		function SearchSuccess(data) {
			$("#ajaxLoading").hide();
			console.log('SearchSuccess');
			$("#searchResults").html(data);

			$("#tableContact").DataTable({
				"responsive": true,
				"autoWidth": false

			});
		}
	</script>


	<script>
		var idToDel;
		function ConfirmDelete(id) {
			$("#modal-delete").modal('show');
			idToDel = id;
		}

		function DeleteContact() {
			$("#ajaxLoading").show();
			$.ajax({
				url: '/Contact/Delete',
				data: { id: idToDel },
				success: function () {
					$("#ajaxLoading").hide();
					$("#modal-delete").modal('hide');
					$('#form_contact').submit();
				}
			});

		}
	</script>

}

